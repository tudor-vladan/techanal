{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "lib": ["ES2021"],
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "src/lib/**/db-optimized*.ts",
    "src/lib/**/ai-analysis-optimized*.ts",
    "src/lib/**/image-processing-optimized*.ts",
    "src/lib/advanced-cache-service.ts",
    "src/lib/redis-cache.ts",
    "src/lib/critical-fixes.ts",
    "src/lib/performance-integrator.ts",
    "src/lib/performance-optimizer.ts",
    "src/lib/target-calibrator.ts"
  ]
} 